<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Text.Headline1">
        <item name="android:textSize">@dimen/TextXXXXLarge</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/onSurface</item>
    </style>

    <style name="Text.Headline1.Grey">
        <item name="android:textColor">@color/grey_1</item>
    </style>

    <style name="Text.Headline2">
        <item name="android:textSize">@dimen/TextXXLarge</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="Text.Headline3">
        <item name="android:textSize">@dimen/TextLarge</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="Text.Body1">
        <item name="android:textSize">@dimen/TextMedium</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/onSurface</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

</resources>